@model KulujenSeuranta.Models.Payment
@using KulujenSeuranta.Helpers
@using Resources.Views;

@{
    ViewBag.Title = @PaymentTexts.txtTitleDelete;
}

<h2>@PaymentTexts.txtTitleDelete</h2>

<h3>@PaymentTexts.txtDeleteConfirmation</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @PaymentTexts.txtSum
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Sum)
        </dd>
        <dt>
            @PaymentTexts.txtCategory
        </dt>

        <dd>
            @EnumCustomHelper.GetCategory(Model.Category)
        </dd>
        <dt>
            @PaymentTexts.txtDate
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value=@PaymentTexts.btnDelete class="btn btn-default" /> |
            @Html.ActionLink(PaymentTexts.lnkBackToList, "Index")
        </div>
    }
</div>

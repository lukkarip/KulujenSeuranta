@model KulujenSeuranta.ViewModels.StatisticsViewModel
@using KulujenSeuranta.Helpers;
@using Resources.Views;

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<h3>@StatisticsTexts.txtTotal = @Model.SumOfAllPayments</h3>

@foreach (KeyValuePair<KulujenSeuranta.Models.Categories, decimal> item in Model.PaymentsByType)
{
    if (item.Value != 0)
    {
        <b>@EnumCustomHelper.GetCategory(item.Key): </b>@item.Value
        <br />
    }
}

@(Model.Chart)

@Scripts.Render("~/bundles/highchart")



